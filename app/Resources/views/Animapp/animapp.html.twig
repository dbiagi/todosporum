{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('libs/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/reset.css') }}">
    <link rel="stylesheet" href="{{ asset('css/animapp.css') }}">
    <link rel="stylesheet" href="{{ asset('css/icomoon.css') }}">
    <link rel="stylesheet" href="{{ asset('libs/font-awesome/css/font-awesome.min.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('libs/eventEmitter/EventEmitter.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('libs/fabric.js/dist/fabric.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/animapp.min.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="containerApp">
        <div id="ferramentas">
            <ul>
                <li><a data-tool="pencil" class="icon-pincel tool" title="Pincel"></a></li>
                <li><a data-tool="eraser" class="icon-borracha tool" title="Borracha"></a></li>
                <li><a data-tool="line" class="icon-linha tool" title="Linha"></a></li>
                <li><a data-tool="rect" class="icon-retangulo tool" title="Retângulo"></a></li>
                <li><a data-tool="circle" class="icon-elipse tool" title="Elipse"></a></li>
                <li><a data-tool="move" class="icon-mover tool" title="Mover"></a></li>
                {#<li><a data-tool="resize" class="icon-redimensionar tool" title="Redimensionar"></a></li>#}
                <li><a data-tool="bucket" class="icon-balde tool" title="Lata de tinta"></a></li>
                <li><a data-tool="file" class="icon-anexar tool" title="Adicionar imagem"></a></li>
                <li><a data-tool="color" class="icon-cor tool" title="Cor"></a></li>
            </ul>
        </div>
        <div id="acoes">
            <div class="row">
                <div class="col-md-4">
                    <label for="time-start"><i class="fa fa-clock-o fa-2x"></i>&nbsp;<span>Tempo</span></label>
                </div>
                <div class="col-md-4">
                    <input id="time-start" class="form-control" type="number" placeholder="Início">
                </div>
                <div class="col-md-4">
                    <input id="time-end" class="form-control" type="number" placeholder="Fim">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="looping"><i class="fa fa-undo fa-2x"></i>&nbsp;<span>Looping</span></label>
                </div>
                <div class="col-md-4">
                    <input type="checkbox" id="looping" value="1">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <input type="checkbox" id="animate" value="1" class="hidden">
                    <label for="animate" class="record"><i class="fa fa-stop-circle fa-2x"></i>&nbsp;<span>Animar</span></label>
                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
        <div id="principal">
            <div id="barra-topo">
                <div id="timer">00:00</div>
                <ul>
                    <li><a class="icon-desfazer" title="Desfazer"></a></li>
                    <li><a class="icon-refazer" title="Refazer"></a></li>
                    <li><a class="icon-ok" title="Finalizar"></a></li>
                    <li><a href="{{ path('main_animapp') }}" class="icon-fechar" title="Sair do App"></a></li>
                </ul>
            </div>
            <div id="animapp"></div>
        </div>
        <div id="timeline">
            <div class="botoes">
                <a class="icon-rever"></a>
                <a class="playpause icon-play"></a>
            </div>
            <div id="timebar">
                <div id="timebar-feito" style="width:80%"></div>
                <div id="timebar-block" style="width:50%"></div>
            </div>
        </div>
    </div>
{% endblock %}
